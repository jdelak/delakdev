{% extends 'base.html.twig' %}
	{% block title %}Julien Delacourt - Me Contacter{% endblock %}
	{% form_theme form 'bootstrap_4_layout.html.twig' %}
{% block content %}
	<div class="row">
		<div class="col-lg-10 col-md-10 mx-auto"><h2>Me contacter</h2>
			{{ form_start(form) }}
	    	{{ form_row(form.name) }}
	    	{{ form_row(form.email) }}
	    	{{ form_row(form.sujet) }}
	    	{{ form_row(form.message) }}
    	<button type="submit" class="btn btn-primary">Envoyer</button>
		<hr>
    	{{ form_end(form) }}
		</div>
	</div>
{% endblock %}