{% extends 'admin/dashboard.html.twig' %}
{% block title %}Ajouter une compétence{% endblock %}
{% form_theme form 'bootstrap_4_layout.html.twig' %}
{% block header %}
    <h2 class="pageheader-title">Dashboard - Ajouter une Compétences</h2>
    <div class="page-breadcrumb">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                {% block breadcrumb %}
                    <li class="breadcrumb-item"><a href="{{ path('dashboard') }}" class="breadcrumb-link">Dashboard</a></li>
                    <li class="breadcrumb-item active" aria-current="page">Ajouter une compétence</li>
                {% endblock %}
            </ol>
        </nav>
    </div>
{% endblock %}
{% block content %}
    <div class="row">
        <div class="col-lg-12 col-md-12 mx-auto">
            <h1>Ajouter une compétence</h1>
            {{ form_start(form) }}
            {{ form_row(form.name) }}
            {{ form_row(form.duration) }}
            {{ form_row(form.imageFile) }}
            <button type="submit" class="btn btn-primary">Envoyer</button>
            <hr>
            {{ form_end(form) }}

        </div>

    </div>
{% endblock %}
