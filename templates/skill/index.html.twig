{% extends 'base.html.twig' %}

{% block title %}Julien Delacourt - Compétences{% endblock %}

{% block content %}
<div class="row">
	<div class="col-lg-12 col-md-12 mx-auto">
       <h2>Compétences</h2>
       <h3>(en mois d'expériences)</h3>
       <br>
       <div class="chart-horiz">
       <ul class="chart">
	    {% for skill in skills %}
	        <li class="past" title="{{ skill.name }}">
	          <span class="bar" data-number="{{ skill.duration }}"></span>
	          <span class="number">{{ skill.duration }}</span>
        	</li>
        {% else %}
        	<li><em>no skill found</em></li>
	    {% endfor %}
		</ul>
		</div>
	</div>
</div>
<hr>
{% endblock %}

{% block javascripts %}
    <script type = 'text/javascript' src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.bundle.min.js"></script>
       <script type='text/javascript' src="{{ asset('js/delak.js') }}"></script>
       <script type='text/javascript' src="{{ asset('js/horizBarChart.js') }}"></script>
       
       <script>
	  $(document).ready(function(){

	    $('.chart').horizBarChart({

	      selector: '.bar',

	      speed: 3000

	    });

	  });

	</script>
{% endblock %}
